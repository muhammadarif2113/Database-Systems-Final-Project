<!-- html code for registering user tab--> 

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
		<title>Welcome new user!</title>
		<style>
		.login-form {
			width: 300px;
			margin: 0 auto;
			font-family: Tahoma, Geneva, sans-serif;
			border: 5px;
		}
		.login-form h1 {
			text-align: center;
			color: #DC143C;
			font-size: 24px;
			padding: 20px 0 20px 0;
		}
		.login-form input[type="password"],
		.login-form input[type="text"] {
			width: 100%;
			padding: 15px;
			border: 1px solid #000000;
			margin-bottom: 15px;
			box-sizing:border-box;
		}
		.login-form input[type="submit"] {
			width: 100%;
			padding: 15px;
			background-color: #535b63;
			border: 5px;
			box-sizing: border-box;
			cursor: pointer;
			font-weight: bold;
			color: #ffffff;
		}
		.bg {
		/* The image used, feel free to change the image used*/
			background-image: url("~/public/Images/Game3.jpeg");

			height: 100%;

			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		}
		</style>
	</head>
	<body>
		<!--references the class .bg on the style sheet-->
		<div class="bg"></div>
		<div class="login-form">
			<h1>Create Account:</h1>
            <h2>Please enter below:</h2>
			<form action="/auth/register" method="POST">
				<input type="text" name="username" placeholder="Username" class= "form-control" required>
				<input type="password" name="password" placeholder="Password" class= "form-control"required>
				<input type="password" name="passwordConfirm" placeholder="Confirm password" required>
				<input type="text" name="phone_number" id = "phoneNum" placeholder="Phone Number" required>
				<input type="submit">
			</form>
			<h4> Already have an account? Click <a href= "/login"> here</a></h4>
			<h4> Delete an existing account? Click <a href= "/delete"> here</a></h4>

		</div>
		{{#if message }}
			<h4 class = "alert alert-danger mt-4">{{message}}</h4>
		{{/if}}



		<script>  //js code to auto include hypens between phonenumber
        document.getElementById('phoneNum').addEventListener('keyup', function(e) { //keyup for event
            var phoneNumber = document.getElementById('phoneNum');
            var charCode = e.keyCode;
            phoneNumber.value = phoneFormat(phoneNumber.value);
        });

        document.getElementById('phoneNum').value = phoneFormat(document.getElementById('phoneNum').value);


        function phoneFormat(input) { //g will replace all matches of non digits with empty string
            input = input.replace(/\D/g, ''); //so non digit characters cant be entered
            input = input.substring(0, 10); //only 9 numbers are allowed
            var size = input.length;
            if (size == 0) {
                input = input;
            } else if (size < 4) { //adds space after fourth number is entered
                input = '' + input;
            } else if (size < 7) {
                input = '' + input.substring(0, 3) + ' - ' + input.substring(3, 6); //add a hypen after third num
            } else {
                input = '' + input.substring(0, 3) + ' - ' + input.substring(3, 6) + ' - ' + input.substring(6, 10); //add a hypen space after 7th num is entered
            }
            return input;
        }
        </script>
	</body>
</html>
