<!-- html and css code for logging in tab--> 

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Login Form</title>
		<style>
		.login-form {
			width: 300px;
			margin: 0 auto;
			font-family: Tahoma, Geneva, sans-serif;
			border: blue;
		}
		.login-form h1 {
			text-align: center;
			color: #DC143C;
			font-size: 24px;
			padding: 20px 0 20px 0;
		}
		.login-form input[type="password"],
		.login-form input[type="text"] {
			width: 100%;
			padding: 15px;
			border: 1px solid #000000;
			margin-bottom: 15px;
			box-sizing:border-box;
		}
		.login-form input[type="submit"] {
			width: 100%;
			padding: 15px;
			background-color: #535b63;
			border: 0;
			box-sizing: border-box;
			cursor: pointer;
			font-weight: bold;
			color: #ffffff;
		}
		
		</style>
	</head>
	<body>
		<!--references the class .bg on the style sheet-->
		<div class="bg"></div>
		<div class="login-form">
			<h1>Login Form</h1>
			<form action="/auth/login" method="POST">
				<input type="text" name="username" id="username" placeholder="Username" required>
				<input type="password" name="password" id="password" placeholder="Password" required>
				<input type="submit">
			</form>
			<h3>Dont have an account? <br>Register <a href= "/register"> here</a></h3>
		</div>
	</body>
</html>